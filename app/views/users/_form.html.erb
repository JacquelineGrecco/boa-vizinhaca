<div class="centered-container">
  <% if @user.invalid? && action_name != 'new' %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for :user, url: users_path do |f| %>
    <label for="name">Nome</label>
    <%= f.text_field :name, label: "Nome", class: "form-control" %>
    <label for="email">E-mail</label>
    <%= f.email_field :email, label: "E-mail", class: "form-control" %>

    <label for="neighbour">Bairro</label>
    <br>
    <%= f.select :neighbours_id, @neighbours.collect {|n| [n.name, n.id]}, class: "form-control" %>
    <br>
    <br>
    <br>
    <%= f.submit "Cadastrar", class: "btn btn-success pull-right" %>
    <a href="/">
      <button class="btn" type="button">
        Voltar
      </button>
    </a>
  <% end %>
</div>
